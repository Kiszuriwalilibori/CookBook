{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "noImplicitAny": true,
    "noEmitOnError": true
  },
  "include": ["**/*.ts", "**/*.tsx", "schemas/recipe.fields/tags.ts"],
  "exclude": ["node_modules"]
}
